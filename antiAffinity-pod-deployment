apiVersion: apps/v1
kind: Deployment
metadata:
  name: blue
  labels:
    name: blue
    type: blue
spec:
  replicas: 3
  selector:
    matchLabels:
      type: blue
  template:
    metadata:
      name: blue
      labels:
        name: blue
        type: blue
    spec:
      containers:
        - name: blue
          image: nginx
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
              - matchExpressions:
                  - key: color
                    operator: In
                    values:
                      - blue