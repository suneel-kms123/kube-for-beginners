apiVersion: apps/v1
kind: Deployment
metadata:
  name: blue
  labels:
    name: blue
    type: blue
spec:
  replicas: 3
  selector:
    matchLabels:
      type: blue
  template:
    metadata:
      name: blue
      labels:
        name: blue
        type: blue
    spec:
      containers:
        - name: blue
          image: nginx
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
              - matchExpressions:
                  - key: color
                    operator: In
                    values:
                      - blue

--- 

apiVersion: apps/v1
kind: Deployment
metadata:
  name: red
  labels:
    name: red
    type: red
spec:
  replicas: 2
  selector:
    matchLabels:
      type: red
  template:
    metadata:
      name: red
      labels:
        name: red
        type: red
    spec:
      containers:
        - name: red
          image: nginx
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
              - matchExpressions:
                  - key: node-role.kubernetes.io/master
                    operator: Exists